{
  // Editor Principal
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.lineHeight": 1.8,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.scrollBeyondLastLine": false,
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "none",
  "editor.parameterHints.enabled": false,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.renderLineHighlight": "gutter",
  "editor.stickyScroll.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.codeLens": false,
  "editor.columnSelection": true,
  "editor.hideCursorInOverviewRuler": false,
  "editor.minimap.enabled": false,
  "editor.fontLigatures": true,

  // Terminal Integrado
  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/usr/bin/zsh"
    }
  },
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.confirmOnKill": "never",
  "workbench.iconTheme": "symbols",
  "workbench.activityBar.location": "top",
  "workbench.statusBar.visible": false,
  "window.titleBarStyle": "hidden",
  "window.menuBarVisibility": "hidden",
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "auto",

  // GlassIt-VSC transparência
  "glassit.alpha": 220,

  // Aparência de extensões personalizadas (Hyprland vibes)
  "apc.font.family": "Fira Code",
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": { "x": 11, "y": 10 },
    "opacity": 1,
    "vibrancy": "dark",
    "frame": false
  },
  "apc.header": { "height": 36 },
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": false,
    "size": 48,
    "itemMargin": 8,
    "itemSize": 32
  },
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none",
    ".nosidebar .inline-tabs-placeholder": "width: 75px",
    ".pane-header": "padding: 0 8px",
    ".pane-body": "padding: 8px",
    ".split-view-view:first-child .pane-header": "display: none !important",
    ".monaco-list-row": "border-radius: 4px;"
  },

  // Extras inteligentes
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-*",
    "tailwind.config.*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.compactFolders": false,

  // Tema e comportamento do editor
  "workbench.editor.showTabs": "single",
  "workbench.editor.showIcons": false,
  "workbench.editor.tabSizing": "fit",
  "workbench.sideBar.location": "left",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.empty.hint": "hidden",
  "workbench.layoutControl.enabled": false,

  // Linter e Formatadores
  "eslint.validate": ["javascript", "javascriptreact", "graphql"],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // Atalhos e Produtividade
  "files.autoSave": "afterDelay",
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "extensions.ignoreRecommendations": true,
  "update.showReleaseNotes": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",

  // Associar arquivos corretamente
  "files.associations": {
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "css",
    ".dev.vars": "dotenv"
  },
  "symbols.files.associations": {
    "*.module.ts": "nest",
    "*.guard.ts": "typescript",
    "*.spec.ts": "ts-test",
    "*.e2e-spec.ts": "ts-test",
    "*.mock.ts": "ts-test",
    "vitest.config.e2e.ts": "vite",
    ".env.development.local": "gear",
    ".env.test.local": "gear",
    ".env.local": "gear",
    ".env.example": "gear"
  },

  // Outras melhorias
  "cSpell.language": "en,pt",
  "terminal.explorerKind": "external",
  "workbench.tree.enableStickyScroll": false,
  "breadcrumbs.enabled": false,
  "security.workspace.trust.untrustedFiles": "newWindow",
  "symbols.hidesExplorerArrows": false,
  "code-runner.runInTerminal": true,
  "workbench.productIconTheme": "material-product-icons",
  "workbench.colorTheme": "Manjaro Nord Dark",
  "clangd.path": "/home/sh1ft/.config/Code - OSS/User/globalStorage/kylinideteam.kylin-clangd/install/19.1.2/clangd_19.1.2/bin/clangd"
}
